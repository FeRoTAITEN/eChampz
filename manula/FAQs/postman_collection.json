{
  "info": {
    "name": "FAQs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "eChampz API - Frequently Asked Questions (Public API)"
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:8000" }
  ],
  "item": [
    {
      "name": "List All FAQs",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/v1/faqs",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "faqs"]
        },
        "description": "Get all active FAQs"
      }
    },
    {
      "name": "List FAQs by Category",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/v1/faqs?category=General",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "faqs"],
          "query": [
            { "key": "category", "value": "General" }
          ]
        },
        "description": "Get FAQs filtered by category"
      }
    },
    {
      "name": "Search FAQs",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/v1/faqs?search=password",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "faqs"],
          "query": [
            { "key": "search", "value": "password" }
          ]
        },
        "description": "Search FAQs by question or answer"
      }
    },
    {
      "name": "Get Single FAQ",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/v1/faqs/1",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "faqs", "1"]
        },
        "description": "Get a single FAQ by ID (increments view count)"
      }
    },
    {
      "name": "List FAQs with Pagination",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/v1/faqs?per_page=10&page=1",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "faqs"],
          "query": [
            { "key": "per_page", "value": "10" },
            { "key": "page", "value": "1" }
          ]
        },
        "description": "Get FAQs with custom pagination"
      }
    },
    {
      "name": "Combined Filters",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/v1/faqs?category=Technical&search=playstation&per_page=5",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "faqs"],
          "query": [
            { "key": "category", "value": "Technical" },
            { "key": "search", "value": "playstation" },
            { "key": "per_page", "value": "5" }
          ]
        },
        "description": "Combine category filter and search"
      }
    }
  ]
}

