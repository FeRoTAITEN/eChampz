          "name": "Search All Gamers",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Accept", "value": "application/json" }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/recruiter/search?per_page=20",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "recruiter", "search"],
              "query": [
                { "key": "per_page", "value": "20" },
                { "key": "page", "value": "1", "disabled": true },
                { "key": "game_id", "value": "", "disabled": true },
                { "key": "rank", "value": "", "disabled": true },
                { "key": "region", "value": "", "disabled": true }
              ]
            }
          }
        },
